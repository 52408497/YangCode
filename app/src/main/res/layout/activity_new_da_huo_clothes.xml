<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.administrator.jianshang.activity.NewDaHuoClothesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">


        <RelativeLayout
android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="添加款式图片" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_img_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">

            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_kh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="款号：" />

            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_mc"
                android:layout_below="@+id/tv_kh"
                android:text="款式名称：" />


            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_ybh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_ybh"
                android:layout_below="@+id/tv_mc"
                android:text="样板号：" />

            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_select_fm"
                android:layout_below="@+id/tv_ybh"
                android:text="封面图片：" />

            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_fm_mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_select_fm"
                android:layout_toRightOf="@id/tv_img"
                android:text="" />

            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_bz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_bz"
                android:layout_below="@+id/tv_img"
                android:text="备注：" />


            <EditText
                android:id="@+id/et_kh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_kh"
                android:layout_toRightOf="@id/tv_mc"
                android:hint="请输入款号" />


            <EditText
                android:id="@+id/et_mc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_kh"
                android:layout_toRightOf="@+id/tv_mc"
                android:hint="请输入款式名称" />

            <EditText
                android:id="@+id/et_ybh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_mc"
                android:layout_toRightOf="@+id/tv_mc"
                android:hint="请输入样板号" />

            <EditText
                android:id="@+id/et_bz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_select_fm"
                android:layout_toRightOf="@+id/tv_mc"
                android:hint="请输入备注信息" />


            <Button
                android:id="@+id/btn_select_fm"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/et_ybh"
                android:layout_below="@id/et_ybh"
                android:text="请选择封面图片" />


        </RelativeLayout>

        <!--private String kuanhao;             //款号-->
        <!--private String kuanshimingcheng;    //款式名称-->
        <!--private String yangbanhao;          //样板号-->
        <!--private String yearInfo;            //年份信息-->
        <!--private String fengmianImg;         //封面图片-->
        <!--private String tag;                 //标记（是否为爆款等）-->
        <!--private String beizhu;              //备注-->
<Button
    android:text="确定"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    </LinearLayout>


</ScrollView>