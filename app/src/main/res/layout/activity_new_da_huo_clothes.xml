<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.administrator.jianshang.activity.NewDaHuoClothesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:gravity="left"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title_jbxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:text="基本信息"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_kh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_jbxx"
                android:text="款号："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_mc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_mc"
                android:layout_below="@+id/tv_kh"
                android:text="款式名称："
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_ybh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_ybh"
                android:layout_below="@+id/tv_mc"
                android:text="样板号："
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_bz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_bz"
                android:layout_below="@+id/tv_ybh"
                android:text="备注："
                android:textSize="20dp" />


            <EditText
                android:id="@+id/et_kh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_kh"
                android:layout_toRightOf="@id/tv_mc"
                android:hint="请输入款号" />


            <EditText
                android:id="@+id/et_mc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_kh"
                android:layout_toRightOf="@+id/tv_mc"
                android:hint="请输入款式名称" />

            <EditText
                android:id="@+id/et_ybh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_mc"
                android:layout_toRightOf="@+id/tv_mc"
                android:hint="请输入样板号" />

            <EditText
                android:id="@+id/et_bz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_ybh"
                android:layout_toRightOf="@+id/tv_mc"
                android:hint="请输入备注信息" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rl_title_kstp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/tv_kstp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/btnPaiZhao"
                    android:text="款式图片"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btnPaiZhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btnXiangCe"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/btnXiangCe"
                    android:layout_toStartOf="@+id/btnXiangCe"
                    android:background="@drawable/paizhao"
                    android:onClick="paiZhaoOnClickForKSTP" />

                <ImageButton
                    android:id="@+id/btnXiangCe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/xiangce"
                    android:onClick="xiangCeOnClickForKSTP" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_img_ks_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_title_kstp">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/rl_title_cbtp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/tv_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/btnCBPaiZhao"
                    android:text="款式成本"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btnCBPaiZhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btnCBXiangCe"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/btnCBXiangCe"
                    android:layout_toStartOf="@+id/btnCBXiangCe"
                    android:background="@drawable/paizhao"
                    android:onClick="paiZhaoOnClickForKSTP" />

                <ImageButton
                    android:id="@+id/btnCBXiangCe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/xiangce"
                    android:onClick="xiangCeOnClickForKSTP" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/rl_title_fltp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/tv_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/btnFLXiangCe"
                    android:text="款式辅料"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btnFLPaiZhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btnFLXiangCe"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/btnFLXiangCe"
                    android:layout_toStartOf="@+id/btnFLXiangCe"
                    android:background="@drawable/paizhao"
                    android:onClick="paiZhaoOnClickForKSTP" />

                <ImageButton
                    android:id="@+id/btnFLXiangCe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/xiangce"
                    android:onClick="xiangCeOnClickForKSTP" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_img_fl_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_title_fltp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>


        <Button
            android:onClick="submitOnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定" />
    </LinearLayout>


</ScrollView>