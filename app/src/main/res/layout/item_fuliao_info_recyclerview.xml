<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp">

    <!--android:background="#22000000"-->
    <LinearLayout
        android:id="@+id/id_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_fl_tupian"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_no_img"
            />

        <TextView
            android:id="@+id/tv_fl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="辅料名称"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <TextView
        android:id="@+id/tv_fl_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="辅料价格"
        android:textAllCaps="false"
        android:textColor="#000000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="元"
            android:textAllCaps="false"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tv_fl_gongyinshang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="供应商"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_fl_bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="备注"
            android:textAllCaps="false"
            android:textColor="#000000"
            />

        <TextView
        android:id="@+id/tv_fl_gongyinshang_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="供应商ID"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:visibility="gone"
        />

        <TextView
            android:id="@+id/tv_fl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辅料ID"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_dh_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大货ID"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />


    </LinearLayout>


</RelativeLayout>