<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp">



    <!--android:background="#22000000"-->
    <LinearLayout
        android:id="@+id/id_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/tv_gongyinshang_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商ID"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_gongyinshang_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商类别"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/iv_mingpian_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_no_img"
            />

        <TextView
            android:id="@+id/tv_gongyinshang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="供应商名称"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_dangkou_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="档口地址"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/tv_cangku_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="仓库地址"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />


        <TextView
        android:id="@+id/tv_dangkou_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="档口电话"
        android:textAllCaps="false"
        android:textColor="#000000"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/tv_cangku_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="仓库电话"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="gone"
            />

    </LinearLayout>


</RelativeLayout>